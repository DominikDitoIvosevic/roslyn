# Project-specific settings:
[*.{cs,vb}]
# Local functions are camelCase
dotnet_naming_style.local_function_style.capitalization = camel_case

# CSharp code style settings:
[*.cs]
csharp_style_var_for_built_in_types = false:none
csharp_style_var_when_type_is_apparent = true:none
csharp_style_var_elsewhere = false:none

# RS0027: Public API with optional parameter(s) should have the most parameters amongst its public overloads.
dotnet_diagnostic.RS0027.severity = none

# RS0016: Add public types and members to the declared API
dotnet_diagnostic.RS0016.severity = none

# RS0017: X is part of the declared API, but is either not public or c ould not be found
dotnet_diagnostic.RS0017.severity = none
